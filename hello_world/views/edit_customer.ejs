<%- include layouts/header.ejs %>

        <div class="container" style="padding-top: 100px;">
            
            <form method="post" action="/customers/edit/<%=data[0].id%>">
                <div class="row">
                    <div class="col s12">
                        <div class="input-field">
                            <input id="name" type="text" class="validate" name="name" value="<%=data[0].name%>" required>
                            <label for="name">Nome</label>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col s12">
                        <div class="input-field">
                            <textarea id="adress" name="address" required cols="30" rows="5" class="materialize-textarea"><%=data[0].address%></textarea>
                            <label for="address">Endere√ßo</label>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col s12">
                        <div class="input-field">
                            <input id="email" type="text" class="validate" value="<%=data[0].email%>" name="email" required>
                            <label for="email">Email</label>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col s12">
                        <div class="input-field">
                            <input id="phone" type="text" class="validate" name="phone" value="<%=data[0].phone%>" required>
                            <label for="phone">Telefone</label>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col s12">
                        &nbsp; <button class="waves-effect waves-light btn" type="submit" name="submit" value="Save">Salvar</button>
                        <button class="red waves-effect waves-light btn" type="button" name="cancel" value="Cancel" class="cancel" onClick="cancelAdd()">Cancelar</button>
                    </div>
                </div>
            </form>
            
        </div>
        
<%- include layouts/footer.ejs %>
