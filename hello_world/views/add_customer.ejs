<%- include layouts/header.ejs %>

        <div class="page-data">
            <form method="post" action="/customers/add">
                <div class="row">
                    <div class="col s12">
                        <div class="input-field">
                            <input id="name" type="text" class="validate" name="name" required>
                            <label for="name">Nome</label>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col s12">
                        <div class="input-field">
                            <textarea id="adress" name="address" required cols="30" rows="5" class="materialize-textarea"></textarea>
                            <label for="address">Endere√ßo</label>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col s12">
                        <div class="input-field">
                            <input id="email" type="text" class="validate" name="email" required>
                            <label for="email">Email</label>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col s12">
                        <div class="input-field">
                            <input id="phone" type="text" class="validate" name="phone" required>
                            <label for="phone">Telefone</label>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col s12">
                        &nbsp; <button class="waves-effect waves-light btn" type="submit" name="submit" value="Save">Salvar</button>
                            <button class="red waves-effect waves-light btn" type="button" name="cancel" value="Cancel" class="cancel" onClick="cancelAdd()">Cancelar</button>
                    </div>
                </div>
            </form>
            
        </div>
        
